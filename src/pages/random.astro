---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import RandomCat from '../components/cats/RandomCat';

const allCats = await getCollection('cats')
const catsData = allCats.map((cat:any) => cat.data)
---

<Layout title="Gato Aleatorio - Isla React Interactiva" description="Demostración de isla React interactiva dentro de página estática">
  <div class="container mx-auto px-4">
    <div class="glass-effect glass-blue p-8 rounded-2xl mb-8 text-center max-w-2xl mx-auto">
      <h1 class="text-4xl font-bold text-white mb-4">
        🎲 Isla React Interactiva
      </h1>
      <p class="text-lg text-gray-200 mb-2">
        Componente React hidratado en página estática
      </p>
      
      <div class="mt-4">
        <span class="glass-effect px-4 py-2 rounded-full text-sm font-medium text-react-blue border border-blue-300/30">
          React Island
        </span>
      </div>
    </div>
    
    <RandomCat cats={catsData} client:load />
  </div>
</Layout>

<style>
  .text-react-blue {
    color: #61dafb;
  }
</style>