---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FeaturedCats from '@/components/cats/FeaturedCats.astro';
import { Cat } from '@lucide/astro';


const cats = await getCollection('cats');
const featuredCats = cats.slice(0, 6);

export const prerender = true;
---

<Layout title="CatWorld - Demostración de Astro SSG + Content Collections">  
  <section class="container mx-auto px-4 pb-12">
    <div class="glass-effect glass-purple p-8 rounded-2xl mb-12">
      <div class="flex flex-row items-center justify-center gap-2">
        <Cat class="w-9 h-9" /> 
        <h2 class="text-4xl font-bold text-center text-white">
          Gatos Destacados
        </h2>
      </div>
      <p class="text-center text-gray-300 text-lg">
        Páginas generadas estáticamente con Content Collections
      </p>
    </div>
    
    <FeaturedCats cats={featuredCats} />
    
    <div class="text-center mt-12">
      <a 
        href="/cats/gallery" 
        class="inline-block glass-effect glass-blue px-8 py-4 rounded-full font-semibold text-white hover:glow-effect transition-all transform hover:scale-105"
      >
        Ver Galería Completa ({cats.length} gatos)
      </a>
    </div>
  </section>
</Layout>