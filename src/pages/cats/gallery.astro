---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import CatGrid from '@/components/cats/CatGrid.astro';

const cats = await getCollection('cats');

export const prerender = true;
---

<Layout title="Galería SSG - CatWorld" description={`Galería estática generada con ${cats.length} gatos usando Astro Content Collections`}>
  <div class="container mx-auto px-4">
    <div class="bg-gray-100 border border-gray-300 p-8 rounded-2xl mb-12 text-center max-w-4xl mx-auto">
      <h1 class="text-5xl font-bold text-gray-800 mb-4">
        Galería Completa
      </h1>
      <p class="text-xl text-gray-600 mb-2">
        {cats.length} páginas generadas estáticamente
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-6">
        <div class="bg-gray-200 border border-gray-300 p-3 rounded-lg">
          <div class="text-2xl font-bold text-green-500">{cats.length}</div>
          <div class="text-sm text-gray-600">Páginas SSG</div>
        </div>
        <div class="bg-gray-200 border border-gray-300 p-3 rounded-lg">
          <div class="text-2xl font-bold text-blue-500">{cats.filter(cat => cat.data.url.includes('.gif')).length}</div>
          <div class="text-sm text-gray-600">GIFs</div>
        </div>
        <div class="bg-gray-200 border border-gray-300 p-3 rounded-lg">
          <div class="text-2xl font-bold text-purple-500">{cats.filter(cat => !cat.data.url.includes('.gif')).length}</div>
          <div class="text-sm text-gray-600">Imágenes</div>
        </div>
      </div>
    </div>
    
    <CatGrid cats={cats} />
  </div>
</Layout>