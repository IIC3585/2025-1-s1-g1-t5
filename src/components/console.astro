---
// Props del componente
export interface Props {
  title?: string;
  status?: string;
  showLineNumbers?: boolean;
  active?: boolean;
}

const {
  title = "console-demo.astro",
  status = "Active",
  showLineNumbers = true,
  active = true,
} = Astro.props;
---

<div class="max-w-6xl mx-auto">
  <div class="bg-slate-900 rounded-2xl overflow-hidden shadow-2xl border border-slate-700">
    <!-- Console Header -->
    <div class="bg-slate-800 px-6 py-4 flex items-center justify-between border-b border-slate-700">
      <div class="flex items-center gap-3">
        <div class="flex gap-2">
          <div class="w-3 h-3 bg-red-500 rounded-full"></div>
          <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
          <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        </div>
        <span class="text-white font-mono text-sm ml-4">{title}</span>
      </div>
    </div>
    
    <!-- Console Content -->
    <div class="p-6 font-mono text-sm overflow-x-auto">
      <div class="space-y-1">
        <slot />
      </div>
    </div>
  </div>
</div>

<style>
  /* Estilos adicionales si son necesarios */
</style>