---
export interface Props {
  title?: string;
  status?: string;
  showLineNumbers?: boolean;
  active?: boolean;
  code?: string;
  id?: string;
}

const {
  title = "console-demo.astro",
  status = "Active",
  showLineNumbers = true,
  active = true,
  code = "// Example code here",

} = Astro.props;
---

<div class="w-full max-w-6xl mx-auto" id={Astro.props.id || ''}>
  <div class="rounded-2xl overflow-hidden shadow-2xl border border-gray-400 bg-gray-50">
    <!-- Console Header -->
    <div class="astro-code px-3 sm:px-6 py-3 sm:py-4 flex items-center justify-between border-b border-gray-400" >
      <div class="flex items-center gap-3">
        <div class="flex gap-2">
          <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-red-500 rounded-full"></div>
          <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-yellow-500 rounded-full"></div>
          <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-green-500 rounded-full"></div>
        </div>
        <span class="text-gray-800 font-mono text-sm ml-4">{title}</span>
      </div>
    </div>
    
    <!-- Console Content -->
    <div class="p-3 sm:p-6 font-mono text-xs sm:text-sm overflow-x-auto">
      <div class="space-y-1">
        <slot />
      </div>
    </div>
  </div>
</div>
